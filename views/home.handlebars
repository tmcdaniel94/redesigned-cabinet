<h1>Home</h1>
<!-- Loop over each object in the posts array -->
{{#each post as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
      {{post.body}}
    <p>Created by {{post.user_id}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    {{!-- <p>
      {{post.description}}
    </p> --}}
  </div>
</div>
{{/each}}